<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="0dp"
    tools:context=".SendMessageActivity">


    <FrameLayout
        android:id="@+id/ProfileSection"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:foreground="@drawable/iv_profile"
            app:cardCornerRadius="50dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|top"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:text="20_유준호_심컴"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/InfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/ProfileSection"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="인원 제한"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:text="시간제한"
            android:textAlignment="center"
            android:textColor="@color/black" />


    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SetColor"
        android:layout_below="@id/ProfileSection"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:text="쪽찌 종류선택"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/InfoLayout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PersonPicker"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="5 / 7"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/HourPicker"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="시간" />

        <TextView
            android:id="@+id/MinPicker"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="분" />
    </LinearLayout>

    <TextView
        android:id="@+id/SetColor"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/InfoLayout"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="친목"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ButtonSection"
        android:layout_below="@+id/SetColor"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purpose4"
        android:gravity="top|left"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/ButtonSection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginLeft="50dp"
            android:background="@color/white"
            android:foreground="@drawable/btn_back"
            android:text=""
            android:textSize="10sp"
            app:backgroundTint="@color/white"
            app:elevation="0dp" />

    </FrameLayout>


</RelativeLayout>